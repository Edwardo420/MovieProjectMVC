@model FavoriteListViewModel

<div class="row checkoutForm">
    <h4>Your Favorite Movie List</h4>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th class="align-middle">Name of Movie</th>
                <th class="align-middle">Picture of Movie</th>
                <th class="align-middle">Description about the Movie</th>
                <th class="align-middle">Remove from Favorite List</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var line in Model.FavoriteService.FavoriteListItems)
            {
            <tr>
                <td class="align-middle">@line.Movie.Title</td>
                <td class="align-middle"> <img src="@line.Movie.Image" class="img-fluid" alt="" /></td>
                <td class="align-middle" style="text-align: justify">@line.Movie.Description</td>
                <td class="align-middle">
                    <a class="btn btn-primary" id="cartButton" sp-controller="FavoriteList" asp-action="RemoveFromFavoriteList" asp-route-movieId="@line.Movie.MovieID">
                        Remove
                    </a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>